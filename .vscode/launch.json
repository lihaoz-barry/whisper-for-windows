{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Without Debugging",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/run.py",
            "console": "externalTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "noDebug": true
        },
        {
            "name": "Debug Whisper Transcriber",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}